# Jacob's lf settings

# Basic setup
set shell zsh
set drawbox
set color256
set icons

# Bindings
map D delete
map gmn cd /mnt/
map gcf cd ~/.config
map gsc cd ~/.local/bin
map <f-7> push :mkdir<space>
map B bulkrename

# Custom commands
cmd bulkrename $vidir
cmd mkdir $mkdir -p "$(echo $* | tr ' ' '\ ')"
cmd chmod $chmod $* "$(echo $fx | tr ' ' '\ ')"
