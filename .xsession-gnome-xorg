#!/bin/sh

#
# ~/.xsession
#
# My startup stuff for Gnome
# 
# Executed by xdm/gdm/kdm at login


# Function to check and see if process is already running, if so send to null
start() {
	pidof "$1" > /dev/null 2> /dev/null || "$@" &
}

# Screensaver for X.  Gnome power settings don't work for some reason, probably because of using Gnome-xorg instead of wayland
start xscreensaver --no-splash

# Wallpaper
start variety

# Faster scrolling speed
start imwheel -b 45

# Quake style drop-down termianl
start guake

# remap caps to escape
setxkbmap -option caps:escape
