#!/usr/bin/env bash
#
# A script to manage dotfiles.
#
# e - script stops on error
# u - error if undefined variable
# o pipefail - script fails if command piped fails
# x - output each line (debug)
#
#set -euox pipefail
set -euo pipefail

git_directory="$HOME/.local/share/dotfiles"
git_work_tree="$HOME"

git --git-dir=$git_directory --work-tree=$HOME $@
