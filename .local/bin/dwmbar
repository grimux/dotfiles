#!/bin/sh

# Time and date function
time_and_date() {
	tad="$(date +"%A, %B %d - %I:%M %p")"
	echo "ðŸ•’ $tad"
}

battery() {
	batt=$(cat /sys/class/power_supply/BAT0/capacity)
	echo "ðŸ”‹$batt"
}

# Loop to call all status functions
while :; do
	xsetroot -name "$(battery) | $(time_and_date)"
	sleep 1m
done
