#!/usr/bin/env bash

if pgrep xow; 
then
	pkill xow && notify-send "xow shutdown";
	xset dpms;	# Turn on power managment for monitors
	xset s 900;	# Set monitor sleep time to 15 minutes
else
	xow &
	notify-send "xow startup";
	xset -dpms;	# Turn off display power managment system.  Prevents monitor from sleeping
fi

sleep 1
pkill -RTMIN+16 dwmblocks
