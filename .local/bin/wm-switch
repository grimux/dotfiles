#!/usr/bin/env bash

sddm-switch() {
	sudo sed -i".bak" "s/Session=.*/Session=$1/" /etc/sddm.conf
	printf "\n%s\n" "$1 selected"
	ln -sfv $HOME/.xsession-$1 $HOME/.xsession
	printf "%s\n\n%s\n" "sddm.conf written" "Please restart xsession"
}

startx-switch() {
	ln -sfv $HOME/.xinitrc-$1 $HOME/.xinitrc
	printf "%s\n\n%s\n" ".xinitrc written" "Please restart xxsession"
}

echo "WM-Switcher (startx)"
echo "1. dwm"
echo "2. Gnome-xorg"
echo "3. XMonad"
echo "4. Awesome"

read -p "Please make a choice: " input

case $input in
	1)
		startx-switch dwm
		;;
	2)
		startx-switch gnome
		;;
	3)
		echo not installed
		;;
	4)
		echo not installed
		;;
	*)
		echo "Invalid input"
		;;
esac

