#!/usr/bin/sh

repos="$HOME/.local/repos"
case $1 in
	dwm)
		cd $repos/dwm
		nvim config.h
		;;
	dmenu)
		cd $repos/dmenu
		nvim config.h
		;;
	st)
		cd $repos/st
		nvim config.h
		;;
	dwmb)
		;&
	dwmblocks)
		cd $repos/dwmblocks
		nvim blocks.h
		;;
	manual)
		;&
	man)
		cd $repos/dwm
		nvim jman.mom
		;;
	*)
		printf "Options: dwm dmenu st dwmblocks manual\n"
		exit
esac

sudo make install
make clean
