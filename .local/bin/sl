#!/usr/bin/sh

repos="$HOME/.local/repos"
config=config.def.h
case $1 in
	dwm)
		cd $repos/dwm
		nvim $config
		;;
	dmenu)
		cd $repos/dmenu
		nvim $config
		;;
	st)
		cd $repos/st
		nvim $config
		;;
	dwmb)
		;&
	dwmblocks)
		cd $repos/dwmblocks
		nvim blocks.h
		;;
	manual)
		;&
	man)
		cd $repos/dwm
		nvim manual.mom
		;;
	*)
		printf "Options:\ndwm\ndmenu\nst\ndwmblocks, dwmb\nmanual, man\n"
		exit
esac

rm -f config.h
sudo make install
make clean
