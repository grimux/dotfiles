#!/bin/bash

#get username and password
USER=""                    #Your username
PASS=""				#Your password
HOST="-p 12345 10.10.10.12"          #Keep just the address
LCD="~/Music"     #Your local directory
RCD="music"               #FTP server directory

lftp -f "
open $HOST
user $USER $PASS
lcd $LCD
mirror --continue --reverse --delete --verbose $LCD $RCD
bye
" 
